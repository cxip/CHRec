<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppKit.Light">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/lightBeige</item>
        <item name="android:windowBackground">@color/lightBeige</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:navigationBarColor">@color/navBar</item>
        <item name="android:actionBarTheme">@style/Widget.Toolbar</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:buttonStyle">@style/Widget.Button</item>
        <item name="android:alertDialogTheme">@style/AlertDialog</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Widget.Button" parent="android:Widget.Material.Button.Colored">
        <item name="android:textColor">#FFF</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>